@model RegisterModel

@{
    ViewData["title"] = "Register";
}

<main>
    <form class="form" asp-action="Register" asp-controller="Account" method="post">
        <h1 class="form__title">Register</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form__group">
            <input class="form__input" asp-for="Username" placeholder="Username"/>
            <input class="form__input" asp-for="EmailAddress" placeholder="Emailaddress"/>
            <input class="form__input" asp-for="ConfirmEmailAddress" placeholder="Confirm Emailaddress"/>
            <input class="form__input" asp-for="Password" placeholder="Password"/>
            <input class="form__input" asp-for="ConfirmPassword" placeholder="Confirm Password"/>
        </div>
        <input class="form__button" type="submit" value="Register" />
        @Html.ValidationSummary()
    </form>
</main>