@model LoginModel

@{
    ViewData["title"] = "Login";
}

<main>
    <form class="form" asp-action="Login" asp-controller="Account" method="post">
        <h1 class="form__title">Login</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form__group">
            <input class="form__input" asp-for="EmailAddress" placeholder="EmailAddress" />
            <input class="form__input" asp-for="Password" placeholder="Password" />
        </div>
        <input class="form__button" type="submit" value="Login" />
        @*Log model Errors*@
        @Html.ValidationSummary()
        <p class="form__info">Not a member? <a asp-action="Register" asp-controller="Account">Signup now</a></p>
    </form>
</main>